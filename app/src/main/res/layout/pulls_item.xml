<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="@dimen/dimen_10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/pullTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_title"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="bold"
        tools:text="TÃ­tulo do pull request" />
    <TextView
        android:id="@+id/pullDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/txt_description"
        android:textSize="@dimen/dimen_16sp"
        tools:text="Body to pull request lorem lopem lorem lopem lorem lopem lorem lopem lorem lopem lorem lopem lorem lopem lorem lopem lorem lopem... " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/transparent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pullProfileImage"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:src="@mipmap/ic_user"
            tools:ignore="ContentDescription"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/txt_title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:orientation="vertical"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/pullUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textColor="@color/txt_title"
                android:textSize="@dimen/dimen_16sp"
                tools:text="username" />
            <TextView
                android:id="@+id/pullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_last_name"
                android:textSize="@dimen/dimen_16sp"
                tools:text="Nome Sobrenome" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>